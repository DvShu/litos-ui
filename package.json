{
  "name": "litos-ui",
  "description": "基于 Web Component 的 UI 组件库",
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "lib:build": "vite build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "inspect:eslint": "eslint --inspect-config",
    "new_version": "node scripts/version.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.9.3",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.11",
    "vitepress": "^1.5.0"
  },
  "files": [
    "lib",
    "styles"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    "./styles/*": "./styles/*",
    "./lib/*": "./lib/*",
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DvShu/litos-ui.git"
  },
  "keywords": [
    "litos-ui",
    "web component",
    "ui framework",
    "component library"
  ],
  "homepage": "https://dvshu.github.io/litos-ui/",
  "bugs": {
    "url": "https://github.com/DvShu/litos-ui/issues"
  },
  "license": "MIT",
  "dependencies": {
    "ph-utils": "^0.10.0",
    "shiki": "^1.23.1"
  }
}
